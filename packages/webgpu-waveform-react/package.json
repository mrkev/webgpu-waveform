{
  "name": "webgpu-waveform-react",
  "description": "Render waveforms to HTML Canvas using WebGPU",
  "private": false,
  "version": "3.3.0",
  "type": "module",
  "main": "./dist/webgpu-waveform-react.umd.cjs",
  "module": "./dist/webgpu-waveform-react.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/webgpu-waveform-react.js",
      "require": "./dist/webgpu-waveform-react.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build -c vite.config.ts --watch",
    "build": "tsc && vite build -c vite.config.ts --emptyOutDir",
    "preview": "vite preview",
    "test": "echo 'no tests atm'"
  },
  "peerDependencies": {
    "react": ">=18.0.0 || >=19.0.0",
    "react-dom": ">=18.0.0 || >=19.0.0"
  },
  "dependencies": {
    "react-merge-refs": "^2.1.1",
    "webgpu-waveform": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@webgpu/types": "^0.1.66",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "homepage": "https://aykev.dev/webgpu-waveform/",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrkev/webgpu-waveform.git",
    "directory": "packages/webgpu-waveform-react"
  },
  "keywords": [
    "react",
    "hooks",
    "webgpu",
    "waveform",
    "webaudio",
    "shader",
    "render",
    "audio",
    "pcm"
  ]
}
