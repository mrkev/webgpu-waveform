{
  "name": "webgpu-waveform",
  "description": "Render waveforms using WebGPU and React",
  "private": false,
  "version": "3.1.0",
  "type": "module",
  "main": "./dist/webgpu-waveform.umd.cjs",
  "module": "./dist/webgpu-waveform.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/webgpu-waveform.js",
      "require": "./dist/webgpu-waveform.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build -c vite.config.ts --watch",
    "build": "tsc && vite build -c vite.config.ts --emptyOutDir",
    "preview": "vite preview",
    "test": "echo 'no tests atm'"
  },
  "devDependencies": {
    "@webgpu/types": "^0.1.52",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.4.0"
  },
  "homepage": "https://aykev.dev/webgpu-waveform/",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrkev/webgpu-waveform.git",
    "directory": "packages/webgpu-waveform"
  },
  "keywords": [
    "webgpu",
    "waveform",
    "webaudio",
    "shader",
    "render",
    "audio",
    "pcm"
  ],
  "dependencies": {
    "@types/color": "^4.2.0",
    "color": "^4.2.3"
  }
}
